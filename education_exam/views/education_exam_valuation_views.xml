<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--   Form view for education exam valuation   -->
    <record id="education_exam_valuation_view_form" model="ir.ui.view">
        <field name="name">education.exam.valuation.view.form</field>
        <field name="model">education.exam.valuation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="valuation_completed" type="object"
                            invisible="not mark_sheet_created or state != 'draft'"
                            class="oe_highlight" string="Completed"/>
                    <button name="valuation_canceled" type="object"
                            invisible="state != 'draft'" string="Cancel"/>
                    <button name="set_to_draft" type="object" invisible="state != 'completed'"
                            string="Set to Draft"/>
                    <field name="state" readonly="1" widget="statusbar" statusbar_visible="draft,completed"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="exam_id" readonly="state != 'draft' or mark_sheet_created "/>
                            <field name="subject_id" widget="selection"
                                   readonly="state != 'draft' or mark_sheet_created "/>
                            <field name="teachers_id" readonly="state != 'draft'"/>
                            <field name="date" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="mark" readonly="state != 'draft'"/>
                            <field name="pass_mark" readonly="state != 'draft'"/>
                            <field name="class_id" readonly="state != 'draft' or mark_sheet_created "/>
                            <field name="division_id" readonly="state != 'draft' or mark_sheet_created "/>
                            <field name="academic_year_id" invisible="1"/>
                            <field name="mark_sheet_created" invisible="1"/>
                        </group>
                    </group>
                    <div style="padding-bottom: 10px;">
                        <button style="padding: 1px 5px;" invisible="state == 'cancel' or mark_sheet_created "
                                string="Create Mark Sheet" name="create_mark_sheet" type="object"
                                class="oe_highlight"/>
                    </div>
                    <notebook invisible="not mark_sheet_created ">
                        <page string="Mark Sheet">
                            <field name="valuation_line" readonly="state != 'draft'">
                                <tree create="0" editable="bottom">
                                    <field name="student_id" column_invisible="1"/>
                                    <field name="student_name" readonly="1"/>
                                    <field name="mark_scored"/>
                                    <field name="pass_or_fail" widget="boolean_toggle"/>
                                    <field name="valuation_id" column_invisible="1"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="student_id"/>
                                            <field name="mark_scored"/>
                                            <field name="pass_or_fail" widget="boolean_toggle"/>
                                            <field name="valuation_id" invisible="1"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <!--   Tree view for education exam valuation   -->
    <record id="education_exam_valuation_view_tree" model="ir.ui.view">
        <field name="name">education.exam.valuation.view.tree</field>
        <field name="model">education.exam.valuation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="exam_id"/>
                <field name="subject_id"/>
                <field name="class_id"/>
                <field name="division_id"/>
                <field name="teachers_id"/>
                <field name="state"/>
                <field name="academic_year_id"/>
            </tree>
        </field>
    </record>
    <!--   Action for education exam valuation   -->
    <record id="action_education_exam_valuation" model="ir.actions.act_window">
        <field name="name">Exam Valuation</field>
        <field name="res_model">education.exam.valuation</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>
    <!--   Menu Items   -->
    <menuitem id="examination_valuation_menu" parent="education_exam.examination_main_menu"
              action="action_education_exam_valuation" name="Exam Valuation" sequence="18"/>
</odoo>
