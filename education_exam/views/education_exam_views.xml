<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--   Form view for education exam   -->
    <record id="education_exam_view_form" model="ir.ui.view">
        <field name="name">education.exam.view.form</field>
        <field name="model">education.exam</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="confirm_exam" type="object" invisible="state != 'draft'"
                            class="oe_highlight" string="Confirm"/>
                    <button name="close_exam" type="object"
                            string="Close" invisible="state != 'ongoing'"
                            confirm="After closing the exam, you can't do valuation. You can close the exam only after the completion of valuation process. Do you want to proceed?"/>
                    <button name="cancel_exam" type="object" invisible="state != 'draft'"
                            string="Cancel"/>
                    <field name="state" readonly="1" widget="statusbar" statusbar_visible="draft,ongoing,close"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="exam_type" readonly="state != 'draft'"/>
                            <field name="class_id" readonly="state != 'draft'"
                                   invisible="school_class_division_wise not in ['class', 'final']"
                                   required="school_class_division_wise in ['class', 'final']"/>
                            <field name="division_id" readonly="state != 'draft'"
                                   invisible="school_class_division_wise not in ['division']"
                                   required="school_class_division_wise in ['division']"/>
                            <field name="academic_year_id" readonly="state != 'draft'"
                                   invisible="school_class_division_wise in ['division'] or not exam_type"
                                   required="not division_id"/>
                            <field name="school_class_division_wise" invisible="1"/>
                            <field name="class_division_hider" invisible="1"/>
                        </group>
                        <group>
                            <field name="start_date" readonly="state != 'draft'"/>
                            <field name="end_date" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Subjects">
                            <field name="subject_line_ids" readonly="state != 'draft'">
                                <tree editable="bottom">
                                    <field name="subject_id"/>
                                    <field name="date"/>
                                    <field name="time_from" widget="float_time"/>
                                    <field name="time_to" widget="float_time"/>
                                    <field name="mark"/>
                                    <field name="exam_id" column_invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <!--   Tree view for education exam   -->
    <record id="education_exam_view_tree" model="ir.ui.view">
        <field name="name">education.exam.view.tree</field>
        <field name="model">education.exam</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="exam_type"/>
                <field name="class_id"/>
                <field name="division_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state"/>
                <field name="academic_year_id"/>
            </tree>
        </field>
    </record>
    <!--   Action for education exam   -->
    <record id="action_education_exam" model="ir.actions.act_window">
        <field name="name">Exam</field>
        <field name="res_model">education.exam</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>
    <!--   Form view for education exam type  -->
    <record id="education_exam_type_view_form" model="ir.ui.view">
        <field name="name">education.exam.type.view.form</field>
        <field name="model">education.exam.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name" placeholder="Eg: Annual Exam"/>
                    </h1>
                    <group>
                        <field name="school_class_division_wise" widget="radio"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--   Tree view for education exam type  -->
    <record id="education_exam_type_view_tree" model="ir.ui.view">
        <field name="name">education.exam.type.view.tree</field>
        <field name="model">education.exam.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <!--   Action for education exam type  -->
    <record id="action_exam_type_view" model="ir.actions.act_window">
        <field name="name">Exam Type</field>
        <field name="res_model">education.exam.type</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>
    <!--  Menu Items for education exam   -->
    <menuitem id="examination_root_menu" name="Exam" sequence="11"
              web_icon="education_exam,static/description/icon.png"/>
    <menuitem id="examination_main_menu" parent="education_exam.examination_root_menu" name="Exam" sequence="3"/>
    <menuitem id="examination_sub_menu" parent="education_exam.examination_main_menu" action="action_education_exam"
              name="Exam" sequence="12"/>
    <menuitem id="examination_reporting_menu" parent="education_exam.examination_root_menu"
              name="Reporting" sequence="30"/>
    <menuitem id="examination_configuration_menu" parent="education_exam.examination_root_menu"
              name="Configuration" sequence="35"/>
    <menuitem id="examination_type_menu" parent="education_exam.examination_configuration_menu"
              action="action_exam_type_view" name="Exam Types" sequence="15"/>
</odoo>
