<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!--    Form view-->
        <record id="school_announcement_view_form" model="ir.ui.view">
            <field name="name">school.announcement.view.form</field>
            <field name="model">school.announcement</field>
            <field name="arch" type="xml">
                <form string="Announcements">
                    <header>
                        <button string="Confirm" type="object" name="to_send" class="oe_highlight"
                                invisible="state != 'draft'"/>
                        <button name="mail_schedule" string="Schedule E-mail" type="object" class="oe_highlight"
                                invisible="state not in ['to_send'] or scheduled_date == False"/>
                        <button name="mail_send" string="Send Now" type="object" class="oe_highlight"
                                invisible="state not in ['to_send', 'pending']"/>
                        <button string="Reset to draft" groups="education_core.group_education_principal" type="object"
                                name="undo" class="oe_highlight"
                                invisible="state not in ['to_send']"/>
                        <button string="Resend" type="object"
                                name="mail_resend" class="oe_highlight"
                                invisible="state not in ['failed']"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,to_send,done"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name" class="oe_inline" readonly="1"/>
                        </group>
                        <group>
                            <field name="announcement_subject" widget="text_emojis"/>
                        </group>
                        <div style="width:370px;">
                            <group>
                                <field name="to_assign"/>
                            </group>
                        </div>
                        <group>
                            <group>
                                <field name="requested_date" readonly="1"/>
                                <field name="expiry_date"/>
                                <field name="scheduled_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="announcement" string="Mail Body">
                                <field name="body_html" widget="html"/>
                                <group>
                                    <field name="attachment_ids" widget="many2many_binary" class="oe_inline"
                                           nolabel="1"/>
                                </group>
                            </page>
                            <page name="failure_reason" string="Failure Reason"
                                  invisible="failure_reason == False">
                                <field name="failure_reason"/>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
<!--    Tree view-->
        <record id="school_announcement_view_tree" model="ir.ui.view">
            <field name="name">school.announcement.view.tree</field>
            <field name="model">school.announcement</field>
            <field name="arch" type="xml">
                <tree decoration-danger="state == 'failed'"
                      decoration-muted="state=='expired'"
                      decoration-success="state=='done'"
                      sample="1" decoration-info="state == 'draft'">
                    <field name="announcement_subject"/>
                    <field name="requested_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
<!--    Action for the model-->
        <record id="school_announcement_action" model="ir.actions.act_window">
            <field name="name">Announcements</field>
            <field name="res_model">school.announcement</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to Create a new Announcement.
                </p>
            </field>
        </record>
<!--    Menu items for the model-->
        <menuitem id="school_announcement_menu_root" name="Announcements"
                  web_icon="educational_announcement,static/description/icon.png" sequence="15"/>
        <menuitem id="school_announcement_menu_action" name="Announcements"
                  groups="education_core.group_education_principal"
                  action="school_announcement_action" parent="school_announcement_menu_root" sequence="1"/>
        <menuitem id="school_announcement_menu_config" name="Configuration"
                  parent="school_announcement_menu_root" sequence="2"/>
</odoo>
